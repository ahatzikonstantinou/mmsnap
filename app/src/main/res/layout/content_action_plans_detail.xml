<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActionPlansDetailActivity"
    tools:showIn="@layout/activity_action_plans_detail">

    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/behavior_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/subsection_marginBottom"
            android:layout_marginLeft="@dimen/subsection_marginSide"
            android:layout_marginRight="@dimen/subsection_marginSide"
            android:layout_marginTop="@dimen/subsection_marginTop"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#F79647"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/eating_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eating_24dp"
                    android:background="@drawable/rounded_border_white_bkg"
                    android:backgroundTint="#CE212A"
                    android:padding="3dp"
                    android:layout_margin="18dp"
                    android:tint="#ffffff"
                    android:scaleX="@dimen/behavior_image_scale_big"
                    android:scaleY="@dimen/behavior_image_scale_big"/>

                <ImageView
                    android:id="@+id/activity_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_running_black_24dp"
                    android:background="@drawable/rounded_border_white_bkg"
                    android:backgroundTint="#005C8A"
                    android:padding="3dp"
                    android:layout_margin="18dp"
                    android:tint="#ffffff"
                    android:scaleX="@dimen/behavior_image_scale_big"
                    android:scaleY="@dimen/behavior_image_scale_big"/>

                <ImageView
                    android:id="@+id/alcohol_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alcohol_black_24dp"
                    android:background="@drawable/rounded_border_white_bkg"
                    android:backgroundTint="#F6AC00"
                    android:padding="3dp"
                    android:layout_margin="18dp"
                    android:tint="#ffffff"
                    android:scaleX="@dimen/behavior_image_scale_big"
                    android:scaleY="@dimen/behavior_image_scale_big"/>

                <ImageView
                    android:id="@+id/smoking_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_smoking_black_24dp"
                    android:background="@drawable/rounded_border_white_bkg"
                    android:backgroundTint="#A349A3"
                    android:padding="3dp"
                    android:layout_margin="18dp"
                    android:tint="#ffffff"
                    android:scaleX="@dimen/behavior_image_scale_big"
                    android:scaleY="@dimen/behavior_image_scale_big"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/subsection_title_width"
                android:layout_height="@dimen/subsection_title_height"
                android:layout_centerHorizontal="true"
                android:background="#F79647"
                android:text="HEALTH BEHAVIORS"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/subsection_title_textSize"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/action_plan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/behavior_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/date_selector_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subsection_marginBottom"
            android:layout_marginLeft="@dimen/subsection_marginSide"
            android:layout_marginRight="@dimen/subsection_marginSide"
            android:layout_marginTop="@dimen/subsection_marginTop"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#F79647"
            android:orientation="vertical"
            android:padding="20dp">

            <!--<include layout="@layout/content_if_then_detail" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border_white_bkg"
                >

                <TableLayout android:layout_height="wrap_content"
                             android:layout_width="match_parent">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            >
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_if_bkg_alt"
                            android:tint="@color/if_color"
                            android:scaleY="1.4"
                            android:scaleX="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IF"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            />
                        </RelativeLayout>
                        <EditText
                            android:layout_column="2"
                            android:layout_weight="30"
                            android:id="@+id/item_if_statement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="if statement"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_then_bkg_alt"
                                android:tint="@color/then"
                                android:layout_centerInParent="true"
                                android:scaleY="2"
                                android:scaleX="3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:text="THEN"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_centerInParent="true"
                                android:paddingEnd="5dp"
                                />
                        </RelativeLayout>
                        <EditText
                            android:layout_column="2"
                            android:layout_weight="30"
                            android:id="@+id/item_then_statement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="then statement"
                            android:textSize="15sp"
                            app:layout_constraintTop_toBottomOf="@+id/counterfactual_item_if_statement"
                            app:layout_constraintLeft_toRightOf="@+id/counterfactual_item_then"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/subsection_title_width"
                android:layout_height="@dimen/subsection_title_height"
                android:layout_centerHorizontal="true"
                android:background="#F79647"
                android:text="ACTION PLAN"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/subsection_title_textSize"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/date_selector_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/action_plan_layout"
        app:layout_constraintBottom_toTopOf="@+id/coping_plan_layout"
        android:onClick="onClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subsection_marginBottom"
            android:layout_marginLeft="@dimen/subsection_marginSide"
            android:layout_marginRight="@dimen/subsection_marginSide"
            android:layout_marginTop="@dimen/subsection_marginTop"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#F79647"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/plan_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/rounded_border_white_bkg"
                android:text="@string/select_plan_dates"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/subsection_title_width"
                android:layout_height="@dimen/subsection_title_height"
                android:layout_centerHorizontal="true"
                android:background="#F79647"
                android:text="ACTION DATE"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/subsection_title_textSize"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
    android:id="@+id/coping_plan_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/date_selector_layout"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/active_switch">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subsection_marginBottom"
            android:layout_marginLeft="@dimen/subsection_marginSide"
            android:layout_marginRight="@dimen/subsection_marginSide"
            android:layout_marginTop="@dimen/subsection_marginTop"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#4AACC5"
            android:orientation="vertical"
            android:padding="20dp">

            <!--<include layout="@layout/content_if_then_detail" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border_white_bkg"
                >

                <TableLayout android:layout_height="wrap_content"
                             android:layout_width="match_parent">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            >
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_if_bkg_alt"
                            android:tint="@color/if_color"
                            android:scaleY="1.4"
                            android:scaleX="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IF"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            />
                        </RelativeLayout>
                        <EditText
                            android:layout_column="2"
                            android:layout_weight="30"
                            android:id="@+id/item_coping_plan_if_statement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="if statement "
                            android:textSize="15sp"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_then_bkg_alt"
                                android:tint="@color/then"
                                android:layout_centerInParent="true"
                                android:scaleY="2"
                                android:scaleX="3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:text="THEN"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_centerInParent="true"
                                android:paddingEnd="5dp"
                                />
                        </RelativeLayout>
                        <EditText
                            android:layout_column="2"
                            android:layout_weight="30"
                            android:id="@+id/item_coping_plan_then_statement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="then statement"
                            android:textSize="15sp"
                            app:layout_constraintTop_toBottomOf="@+id/counterfactual_item_if_statement"
                            app:layout_constraintLeft_toRightOf="@+id/counterfactual_item_then"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/subsection_title_width"
                android:layout_height="@dimen/subsection_title_height"
                android:layout_centerHorizontal="true"
                android:background="@color/coping_plan"
                android:text="COPING PLAN"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/subsection_title_textSize"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </FrameLayout>
    <Switch
        android:id="@+id/active_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET"
        android:textOn="ON"
        android:textOff="OFF"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/coping_plan_layout"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_trnsp_bkg"
        android:text="Save"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/active_switch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>