<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".IfThenActivity"
    tools:showIn="@layout/activity_if_then">

    <Button
        android:id="@+id/if_then_counterfactual_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/counterfactual"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/title_activity_counterfactual"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/if_then_action_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/if_then_action_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/action_plan"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/title_activity_action_plans"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/if_then_coping_btn"
        app:layout_constraintEnd_toEndOf="@+id/if_then_counterfactual_btn"
        app:layout_constraintStart_toStartOf="@+id/if_then_counterfactual_btn"
        app:layout_constraintTop_toBottomOf="@+id/if_then_counterfactual_btn"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/if_then_coping_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/coping_plan"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/title_activity_coping_plans"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/daily_evaluations_btn"
        app:layout_constraintEnd_toEndOf="@+id/if_then_action_btn"
        app:layout_constraintStart_toStartOf="@+id/if_then_action_btn"
        app:layout_constraintTop_toBottomOf="@+id/if_then_action_btn"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/daily_evaluations_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/daily_evaluations"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="DAILY EVALUATIONS"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/if_then_action_btn"
        app:layout_constraintStart_toStartOf="@+id/if_then_action_btn"
        app:layout_constraintTop_toBottomOf="@+id/if_then_coping_btn"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintVertical_chainStyle="spread"/>
</android.support.constraint.ConstraintLayout>