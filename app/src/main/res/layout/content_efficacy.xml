<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EfficacyActivity"
    tools:showIn="@layout/activity_efficacy"
    android:orientation="vertical">

    <include layout="@layout/assessment_logo"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:padding="15dp"
            android:background="@drawable/mmsnap_subcategory_border"
            android:backgroundTint="@color/assessments_efficacy_btn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tick the box if you agree with the statement"/>

            <CheckBox
                android:id="@+id/efficacy_lifestyle_cbx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_white_bkg"
                android:padding="10dp"
                android:textSize="18sp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="I am confident that I can adjust my life to a healthier lifestyle"/>

            <CheckBox
                android:id="@+id/efficacy_goals_cbx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_white_bkg"
                android:padding="10dp"
                android:textSize="18sp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="I am confident that I can complete at least four health behaviour goals per week"/>

            <CheckBox
                android:id="@+id/efficacy_mm_cbx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_white_bkg"
                android:padding="10dp"
                android:textSize="18sp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="I am confident that I can complete as many behaviour goals as necessary in order to manage my Multimorbidity"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="334dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/assessments_efficacy_btn"
                android:text="@string/assessments_efficacy_btn_text"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>