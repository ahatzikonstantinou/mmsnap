<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MMSNAPActivity"
    tools:showIn="@layout/activity_assessments">


    <Button
        android:id="@+id/assessments_illness_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_illness_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_illness_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessments_risk_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"/>

    <Button
        android:id="@+id/assessments_risk_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_risk_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_risk_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessments_efficacy_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/assessments_efficacy_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_efficacy_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_efficacy_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessments_plans_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/assessments_plans_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_plans_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_plans_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessments_health_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/assessments_health_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_health_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_health_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessments_weekly_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/assessments_weekly_btn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/mmsnap_btn_bkg"
        android:backgroundTint="@color/assessments_weekly_btn"
        android:drawableRight="@drawable/subcategory_btn_img"
        android:drawableTint="#FFFFFF"
        android:paddingLeft="22dp"
        android:paddingRight="10dp"
        android:text="@string/assessments_weekly_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00A3EB"
        android:drawableTint="#EFE4B0"
        android:drawableTop="@drawable/assessments_section_logo"
        android:text="ASSESSMENTS"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>