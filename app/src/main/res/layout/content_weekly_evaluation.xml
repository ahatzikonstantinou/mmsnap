    <!--<include layout="@layout/logo_assessment"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subsection_marginTop"
                android:layout_marginBottom="@dimen/subsection_marginBottom"
                android:layout_marginRight="@dimen/subsection_marginSide"
                android:layout_marginLeft="@dimen/subsection_marginSide"
                android:padding="10dp"
                android:background="@drawable/mmsnap_subcategory_border"
                android:backgroundTint="@color/assessments_efficacy_btn"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon 25 February 2019"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunn 3 March 2019"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15sp"/>
                </LinearLayout>


                <LinearLayout
