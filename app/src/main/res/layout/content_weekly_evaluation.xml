                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:background="@drawable/rounded_border_white_bkg"
                        android:text="On how many of the last SEVEN DAYS did you participate in at least 30 minutes of physical activity? (Total minutes of continuous activity, including walking)"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_white_bkg"
                        android:padding="15dp"
                        android:layout_marginTop="2dp">
                        <RadioGroup
                            android:id="@+id/physical_activity_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            >
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="0"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="1"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="3"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="4"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="5"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="6"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="7"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                        </RadioGroup>
                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/alcohol_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="ALCOHOL DRINKING"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:background="@drawable/rounded_border_white_bkg"
                        android:text="Have you managed to drink alcohol within the recommended limit - of at least 14 standard units of drink - in the last SEVEN DAYS?"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_white_bkg"
                        android:padding="15dp"
                        android:layout_marginTop="2dp">
                        <RadioGroup
                            android:id="@+id/alcohol_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            >
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="0"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="1"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
