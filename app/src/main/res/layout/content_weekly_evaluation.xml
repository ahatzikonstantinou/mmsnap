                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="7"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                        </RadioGroup>
                    </FrameLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/weekly_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_border_trnsp_bkg"
                    android:text="Submit"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="@dimen/subsection_title_width"
                    android:layout_height="@dimen/subsection_title_height"
                    android:layout_centerHorizontal="true"
                    android:background="@color/assessments_weekly_btn"
                    android:text="@string/assessments_weekly_title"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/subsection_title_textSize"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>