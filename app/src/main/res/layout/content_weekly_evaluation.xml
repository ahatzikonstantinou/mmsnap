                                android:background="@drawable/custom_radio"
                                android:text="7"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                        </RadioGroup>
                    </FrameLayout>
                </LinearLayout>

