                        android:background="@drawable/rounded_border_white_bkg"
                        android:text="How many of the last SEVEN DAYS have you followed a healthy eating plan and eaten five or more servings of fruits and vegetables?"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_white_bkg"
                        android:padding="15dp"
                        android:layout_marginTop="2dp">
                        <RadioGroup
                            android:id="@+id/diet_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            >
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="0"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="1"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
                                />
                            <RadioButton
                                android:layout_width="@dimen/custom_numeric_radio_button_size"
                                android:layout_height="@dimen/custom_numeric_radio_button_size"
                                android:button="@null"
                                android:background="@drawable/custom_radio"
                                android:text="3"
                                android:textAlignment="center"
                                android:layout_marginRight="@dimen/custom_numeric_radio_space"
