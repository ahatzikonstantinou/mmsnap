            <!--android:paddingTop="6dp"-->
            <!--android:paddingBottom="6dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="15dp"-->
            <!--/>-->
        <TextView
            android:layout_column="2"
            android:layout_weight="30"
            android:id="@+id/counterfactual_item_then_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="then statement"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/counterfactual_item_if_statement"
            app:layout_constraintLeft_toRightOf="@+id/counterfactual_item_then"
            android:layout_gravity="center_vertical"
            />
    </TableRow>

</TableLayout>

</LinearLayout>