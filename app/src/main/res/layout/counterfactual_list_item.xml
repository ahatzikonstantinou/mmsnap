<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_border_white_bkg"
    android:descendantFocusability="blocksDescendants"
    >

    <!--ahat: add the following line to the above layout to re-activate itemOnClick-->
    <!--android:descendantFocusability="blocksDescendants"-->

    <ImageView
        android:id="@+id/counterfactual_list_item_chk"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/counterfactual_list_item_active"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_column="1"
            android:layout_weight="1"
            android:src="@drawable/ic_active_alt_24dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/counterfactual_list_item_inactive"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_column="1"
            android:layout_weight="1"
            android:src="@drawable/ic_inactive_alt_24dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    <TableLayout android:layout_height="wrap_content"
                 android:layout_width="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_column="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_if_bkg_alt"
                android:tint="@color/if_color"
                android:scaleY="1.4"
                android:scaleX="2"
                />
            <TextView
                android:id="@+id/counterfactual_item_if"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IF"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                />
        <!--<TextView-->
            <!--android:id="@+id/counterfactual_item_if"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="IF"-->
            <!--android:textAlignment="center"-->
            <!--android:background="@drawable/ic_if_bkg_alt"-->
            <!--android:backgroundTint="@color/if_color"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="16sp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_column="1"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:paddingTop="2dp"-->
            <!--android:paddingBottom="2dp"-->
            <!--/>-->
        </RelativeLayout>
        <TextView
            android:layout_column="2"
            android:layout_weight="30"
            android:id="@+id/counterfactual_item_if_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="if statement "
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
        />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_column="1"
            android:layout_marginRight="5dp"
            >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_then_bkg_alt"
                android:tint="@color/then"
                android:layout_centerInParent="true"
                android:scaleY="2"
                android:scaleX="3"
                />

            <TextView
                android:id="@+id/counterfactual_item_then"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="THEN"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                />
        </RelativeLayout>
        <!--<TextView-->
            <!--android:layout_weight="1"-->
            <!--android:layout_column="1"-->
            <!--android:id="@+id/counterfactual_item_then"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/ic_then_bkg_alt"-->
            <!--android:backgroundTint="@color/then"-->
