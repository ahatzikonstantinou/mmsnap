<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_border_white_bkg"
    android:descendantFocusability="blocksDescendants"
    >

    <!--ahat: add the following line to the above layout to re-activate itemOnClick-->
    <!--android:descendantFocusability="blocksDescendants"-->

    <ImageView
        android:id="@+id/counterfactual_list_item_chk"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/counterfactual_list_item_active"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_column="1"
            android:layout_weight="1"
            android:src="@drawable/ic_active_24dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/counterfactual_list_item_inactive"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_column="1"
            android:layout_weight="1"
            android:src="@drawable/ic_inactive_24dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    <TableLayout android:layout_height="wrap_content"
                 android:layout_width="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/counterfactual_item_if"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IF"
            android:textAlignment="center"
            android:background="@color/if_color"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:layout_column="2"
            android:layout_weight="30"
            android:id="@+id/counterfactual_item_if_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="if statement "
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
        />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_column="1"
            android:id="@+id/counterfactual_item_then"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/then"
            android:textColor="#ffffff"
            android:text="THEN"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_column="2"
            android:layout_weight="30"
            android:id="@+id/counterfactual_item_then_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="then statement"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/counterfactual_item_if_statement"
            app:layout_constraintLeft_toRightOf="@+id/counterfactual_item_then"
            android:layout_gravity="center_vertical"
            />
    </TableRow>

</TableLayout>

</LinearLayout>