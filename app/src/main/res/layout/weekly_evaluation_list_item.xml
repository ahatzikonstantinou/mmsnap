<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_lightgrey_border_white_bkg"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/scored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_24dp"
            android:tint="@color/green_check"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            android:tint="@color/yellow_warning"
            android:visibility="visible"
            android:scaleX="0.7"
            android:scaleY="0.7"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/status"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 April 2019"
            android:textSize="13sp"
            android:textColor="#555555"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="0dp"/>

        <TextView
            android:id="@+id/dateSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/startdate"
            app:layout_constraintTop_toTopOf="@+id/startdate"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 April 2019"
            android:textSize="13sp"
            android:textColor="#555555"
            app:layout_constraintStart_toEndOf="@+id/dateSpacer"
            app:layout_constraintTop_toTopOf="@+id/startdate"
            android:layout_margin="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/date"
        android:layout_marginTop="4dp"
    >

        <ImageView
            android:id="@+id/eating_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_white_bkg"
            android:backgroundTint="#CE212A"
            android:src="@drawable/ic_eating_24dp"
            android:tint="#ffffff"
            android:padding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startdate"/>
        <TextView
            android:id="@+id/diet_score"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/eating_image"
            app:layout_constraintTop_toTopOf="@id/eating_image"
            app:layout_constraintTop_toBottomOf="@id/eating_image"
            android:text="4"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#cccccc"
            android:layout_marginEnd="15dp"
            />

        <ImageView
            android:id="@+id/activity_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_white_bkg"
            android:backgroundTint="#005C8A"
            android:src="@drawable/ic_running_black_24dp"
            android:tint="#ffffff"
            android:padding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintStart_toEndOf="@id/diet_score"
            app:layout_constraintTop_toTopOf="@+id/eating_image"/>
        <TextView
            android:id="@+id/physical_activity_score"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/activity_image"
            app:layout_constraintTop_toTopOf="@id/activity_image"
            app:layout_constraintTop_toBottomOf="@id/activity_image"
            android:text="7"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#cccccc"
            android:layout_marginEnd="15dp"
            />

        <ImageView
            android:id="@+id/alcohol_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_white_bkg"
            android:backgroundTint="#F6AC00"
            android:src="@drawable/ic_alcohol_black_24dp"
            android:tint="#ffffff"
            android:padding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintStart_toEndOf="@id/physical_activity_score"
            app:layout_constraintTop_toTopOf="@id/physical_activity_score"/>
        <TextView
            android:id="@+id/alcohol_score"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/alcohol_image"
            app:layout_constraintTop_toTopOf="@id/alcohol_image"
            app:layout_constraintTop_toBottomOf="@id/alcohol_image"
            android:text="7"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#cccccc"
            android:layout_marginEnd="15dp"
            />

            <ImageView
            android:id="@+id/smoking_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_white_bkg"
            android:backgroundTint="#A349A3"
            android:src="@drawable/ic_smoking_black_24dp"
            android:tint="#ffffff"
            android:padding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintStart_toEndOf="@id/alcohol_score"
            app:layout_constraintTop_toTopOf="@id/alcohol_score"/>
        <TextView
            android:id="@+id/smoking_score"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/smoking_image"
            app:layout_constraintTop_toTopOf="@id/smoking_image"
            app:layout_constraintTop_toBottomOf="@id/smoking_image"
            android:text="7"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border_trnsp_bkg"
            android:backgroundTint="#cccccc"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>