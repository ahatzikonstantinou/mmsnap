<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    tools:context=".MMSNAPSubCategoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mmsnap_subcategory_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subsection_marginTop"
                android:layout_marginBottom="@dimen/subsection_marginBottom"
                android:layout_marginRight="@dimen/subsection_marginSide"
                android:layout_marginLeft="@dimen/subsection_marginSide"
                android:background="@drawable/mmsnap_subcategory_border"
                android:backgroundTint="@color/how_to_use_this_app"
                android:orientation="vertical">



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:background="#ffffff"

                        >
                    </View>

                    <TextView
                        android:id="@+id/mmsnap_subcategory_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="#ffffff"
                        android:padding="10dp"
                        android:text="@string/how_to_use_this_app_text"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/mmsnap_subcategory_title_textview"
                    android:layout_width="@dimen/subsection_title_width"
                    android:layout_height="@dimen/subsection_title_height"
                    android:layout_centerHorizontal="true"
                    android:background="@color/how_to_use_this_app"
                    android:text="@string/how_to_use_this_app"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/subsection_title_textSize"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>

</FrameLayout>