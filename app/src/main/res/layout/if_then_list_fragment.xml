            <RelativeLayout
                android:id="@+id/sun_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/day_sun_chk"
                    android:layout_width="@dimen/plan_day_button_size"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:button="@null"
