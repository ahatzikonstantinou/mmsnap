                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:button="@null"
                    android:background="@drawable/custom_radio"
                    android:text="Wed"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/plan_day_button_margin"
                    />
                <ImageView
                    android:id="@+id/day_wed_check_img"
                    android:layout_width="@dimen/day_success_icon_size"
                    android:layout_height="@dimen/day_success_icon_size"
                    android:src="@drawable/ic_check_24dp"
                    android:tint="@color/green_check"
                    android:layout_marginTop="@dimen/day_success_icon_marginTop"
                    android:layout_marginStart="@dimen/day_success_icon_marginStart"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/day_wed_fail_img"
                    android:layout_width="@dimen/day_success_icon_size"
                    android:layout_height="@dimen/day_success_icon_size"
                    android:src="@drawable/ic_error"
                    android:tint="@color/green_check"
                    android:layout_marginTop="@dimen/day_success_icon_marginTop"
                    android:layout_marginStart="@dimen/day_success_icon_marginStart"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/thu_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/day_thu_chk"
                    android:layout_width="@dimen/plan_day_button_size"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:button="@null"
                    android:background="@drawable/custom_radio"
                    android:text="Thu"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/plan_day_button_margin"
                    />
                <ImageView
                    android:id="@+id/day_thu_check_img"
                    android:layout_width="@dimen/day_success_icon_size"
                    android:layout_height="@dimen/day_success_icon_size"
                    android:src="@drawable/ic_check_24dp"
                    android:tint="@color/green_check"
                    android:layout_marginTop="@dimen/day_success_icon_marginTop"
                    android:layout_marginStart="@dimen/day_success_icon_marginStart"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/day_thu_fail_img"
                    android:layout_width="@dimen/day_success_icon_size"
                    android:layout_height="@dimen/day_success_icon_size"
                    android:src="@drawable/ic_error"
                    android:tint="@color/green_check"
                    android:layout_marginTop="@dimen/day_success_icon_marginTop"
                    android:layout_marginStart="@dimen/day_success_icon_marginStart"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fri_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/day_fri_chk"
                    android:layout_width="@dimen/plan_day_button_size"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:button="@null"
                    android:background="@drawable/custom_radio"
                    android:text="Fri"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/plan_day_button_margin"
                    />
                <ImageView
                    android:id="@+id/day_fri_check_img"
                    android:layout_width="@dimen/day_success_icon_size"
                    android:layout_height="@dimen/day_success_icon_size"
                    android:src="@drawable/ic_check_24dp"
                    android:tint="@color/green_check"
                    android:layout_marginTop="@dimen/day_success_icon_marginTop"
