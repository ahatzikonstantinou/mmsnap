                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_column="1"
                android:gravity="center"
                >
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_if_bkg_alt"
                    android:tint="@color/if_color"
                    android:scaleY="1.4"
                    android:scaleX="2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IF"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_column="2"
                android:layout_weight="30"
                android:id="@+id/item_if_statement"
                android:layout_height="wrap_content"
                android:text="if statement"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
            />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_column="1"
                android:layout_marginEnd="5dp"
                >

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_then_bkg_alt"
                    android:tint="@color/then"
                    android:layout_centerInParent="true"
                    android:scaleY="2"
                    android:scaleX="3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="THEN"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:paddingEnd="5dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_column="2"
                android:layout_weight="30"
                android:id="@+id/item_then_statement"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="then statement"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                />
        </TableRow>

        </TableLayout>

    </LinearLayout>

</merge>