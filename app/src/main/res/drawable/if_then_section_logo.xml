<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--this is to create a margin between the logo and the title in the toolbar-->
    <item android:width="45dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!--this is the background color of the logo-->
    <item
        android:width="20dp"
        android:height="18dp"
        android:left="13dp"
        android:top="13dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/if_then_bkg"/>
        </shape>
    </item>

    <!--this is the actual icon used for the logo-->
    <item
        android:drawable="@drawable/ic_if_then_light"
        android:width="45dp"
        android:height="45dp"
        />

</layer-list >